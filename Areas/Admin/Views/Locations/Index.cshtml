@model IEnumerable<AirBB.Models.Location>

@{
    ViewData["Title"] = "Manage Locations";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-3">Manage Locations</h1>

    <a class="btn btn-primary mb-3" asp-action="Create">Add New Location</a>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>City</th>
                <th>State</th>
                <th>Country</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var loc in Model)
            {
                <tr>
                    <td>@loc.City</td>
                    <td>@loc.State</td>
                    <td>@loc.Country</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@loc.LocationId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@loc.LocationId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
