@model AirBB.Models.Residence

@{
    ViewData["Title"] = "Delete Residence";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">

    <h2>Delete Residence</h2>
    <hr />

    <h4>Are you sure you want to delete this residence?</h4>

    <table class="table table-bordered mt-3">
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Location</th>
            <td>@Model.Location?.City</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>@Model.PricePerNight</td>
        </tr>
        <tr>
            <th>Bedrooms</th>
            <td>@Model.BedroomNumber</td>
        </tr>
        <tr>
            <th>Bathrooms</th>
            <td>@Model.BathroomNumber</td>
        </tr>
    </table>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ResidenceId" />

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

</div>
