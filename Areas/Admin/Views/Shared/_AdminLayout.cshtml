@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "AirBB Admin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@title - AirBB Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        .admin-sidebar {
            width: 260px;
            background: #0b3c7d;
            color: #fff;
            display: flex;
            flex-direction: column;
            padding: 1.5rem 1rem;
        }

        .admin-brand a {
            color: #fff;
            font-size: 1.6rem;
            font-weight: 700;
            text-decoration: none;
        }

        .admin-nav a {
            display: block;
            color: #d9e4ff;
            text-decoration: none;
            padding: 0.6rem 0.9rem;
            border-radius: 0.5rem;
            margin-bottom: 0.25rem;
            font-size: 0.95rem;
        }

        .admin-nav a:hover,
        .admin-nav a.active {
            background: #1458b3;
            color: #fff;
        }

        .admin-main {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .admin-topbar {
            background: #ffffff;
            border-bottom: 1px solid #e2e6f0;
            padding: 0.75rem 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .admin-content {
            padding: 1.5rem;
        }

        .admin-footer {
            font-size: 0.8rem;
            color: #8892a4;
            padding: 0.75rem 1.5rem;
            border-top: 1px solid #e2e6f0;
            margin-top: auto;
            background: #ffffff;
        }
    </style>
</head>

<body class="admin-body d-flex">

    <!-- LEFT SIDEBAR -->
    <aside class="admin-sidebar">
        
        <!-- ðŸ”µ REPLACED DASHBOARD + BACK TO SITE WITH LOGO -->
        <div class="admin-brand mb-4">
            <a asp-area="" asp-controller="Home" asp-action="Index">AirBB</a>
        </div>

        <!-- ADMIN NAVIGATION -->
        <nav class="admin-nav">
            <a asp-area="Admin" asp-controller="Residence" asp-action="Index">Manage Residence</a>
            <a asp-area="Admin" asp-controller="Locations" asp-action="Index">Manage Location</a>
            <a asp-area="Admin" asp-controller="User" asp-action="Index">Manage User</a>
        </nav>
    </aside>

    <!-- MAIN RIGHT SIDE -->
    <div class="admin-main">
        
        <!-- TOP BAR WITH AIRBB LOGO INSTEAD OF HOME/DASHBOARD -->
        <header class="admin-topbar">
            <a asp-area="" asp-controller="Home" asp-action="Index" 
               class="fw-bold text-dark text-decoration-none"
               style="font-size:1.4rem;">
                AirBB
            </a>

            <span class="text-muted small">Admin Panel</span>
        </header>

        <main class="admin-content">
            @RenderBody()
        </main>

        <footer class="admin-footer">
            &copy; @DateTime.Now.Year - AirBB Admin
        </footer>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
