@model AirBB.Models.Residence
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">

    <img src="~/images/@Model.ResidencePicture"
         class="img-fluid rounded mb-4"
         style="width:100%; height:450px; object-fit:cover;" />

    <h2 class="fw-bold">@Model.Name</h2>
    <p class="text-muted">@Model.Location?.City • Sleeps @Model.GuestNumber • @Model.BedroomNumber br / @Model.BathroomNumber bath</p>

    <h4 class="mt-2">$@Model.PricePerNight / night</h4>

    <form asp-controller="Reservation" asp-action="Create" method="post" class="mt-4">

        <input type="hidden" name="residenceId" value="@Model.ResidenceId" />

        <div class="row">
            <div class="col-md-4">
                <label>Check-in</label>
                <input type="date" name="checkIn" class="form-control" required />
            </div>

            <div class="col-md-4">
                <label>Check-out</label>
                <input type="date" name="checkOut" class="form-control" required />
            </div>
        </div>

        <button class="btn btn-success mt-3 px-4">Reserve</button>
        <a href="/Home" class="btn btn-secondary mt-3">Back to Home</a>
    </form>

</div>
