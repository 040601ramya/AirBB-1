@model IEnumerable<AirBB.Models.DomainModels.Residence>

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <form asp-action="Index" method="get">
        <div class="filter-bar shadow p-3 bg-white rounded d-flex flex-wrap align-items-end gap-3">

            <div class="flex-grow-1">
                <label class="form-label fw-bold">Where</label>
                <select name="locationId" class="form-control">
                    <option value="">All</option>

                    @if (ViewBag.Locations != null)
                    {
                        foreach (var loc in ViewBag.Locations)
                        {
                            <option value="@loc.LocationId">@loc.Name</option>
                        }
                    }
                </select>
            </div>

            <div>
                <label class="form-label fw-bold">Check-in</label>
                <input type="date" name="start" class="form-control" />
            </div>

            <div>
                <label class="form-label fw-bold">Check-out</label>
                <input type="date" name="end" class="form-control" />
            </div>

            <div style="width:120px;">
                <label class="form-label fw-bold">Guests</label>
                <input type="number" name="guests" class="form-control" min="1" value="1" />
            </div>

            <div>
                <button class="btn btn-primary px-4">Filter</button>
            </div>

            <div>
                <a href="/Home" class="btn btn-secondary px-4">Clear</a>
            </div>

        </div>
    </form>
</div>

<div class="container mt-4">
    <h2 class="mb-3 fw-bold">Available Residences</h2>

    <div class="row">
        @foreach (var r in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg border-0 rounded-4 residence-card">

                    <img src="~/images/@r.ResidencePicture"
                         class="card-img-top rounded-top-4"
                         style="height:250px; width:100%; object-fit:cover;" />

                    <div class="card-body">
                        <h5 class="fw-bold">@r.Name</h5>
                        <p class="text-muted">@r.Location?.City</p>
                        <p class="fw-bold text-dark">
                            $@r.PricePerNight <span class="text-muted">/ night</span>
                        </p>

                        <a class="btn btn-danger w-100 mt-2"
                           asp-controller="Residences"
                           asp-action="Details"
                           asp-route-id="@r.ResidenceId">
                            View Details
                        </a>
                    </div>

                </div>
            </div>
        }
    </div>
</div>

<style>
    .residence-card {
        transition: transform .2s ease, box-shadow .2s ease;
        border-radius: 16px !important;
    }
    .residence-card:hover {
        transform: translateY(-6px);
        box-shadow: 0px 8px 20px rgba(0,0,0,0.25);
    }
</style>
