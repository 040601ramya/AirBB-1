@model List<AirBB.Models.Reservation>

@{
    ViewData["Title"] = "My Reservations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">

    <h1 class="fw-bold mb-4">My Reservations</h1>

    <table class="table table-striped table-bordered shadow">
        <thead class="table-dark">
            <tr>
                <th>Image</th>
                <th>Residence</th>
                <th>Location</th>
                <th>Dates</th>
                <th>Price/Night</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                   
                    <td style="width:150px;">
                        <img src="~/images/@r.Residence?.ResidencePicture"
                             class="img-fluid rounded"
                             style="width:130px; height:85px; object-fit:cover;" />
                    </td>

                   
                    <td class="fw-bold">
                        @r.Residence?.Name
                    </td>

                    
                    <td>
                        @r.Residence?.Location?.City
                    </td>

                    
                    <td>
                        @r.ReservationStartDate.ToString("MM/dd/yyyy")
                        â€“
                        @r.ReservationEndDate.ToString("MM/dd/yyyy")
                    </td>

                   
                    <td>
                        $@r.Residence?.PricePerNight
                    </td>

                    
                    <td>
                        <form asp-action="Delete" asp-route-id="@r.ReservationId" method="post">
                            <button class="btn btn-danger btn-sm">Cancel</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/Home" class="btn btn-secondary mt-3">Back to Home</a>
</div>
