<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - AirBB</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">

    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/Home/Index">
                AirBB
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Reservation">Reservations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Residence">Admin</a>
                    </li>

                </ul>
            </div>

        </div>
    </nav>
    <main class="flex-grow-1">
        @RenderBody()
    </main>
    <footer class="bg-dark text-white mt-4 py-3">
        <div class="container text-center">
            <a href="#" class="text-white mx-2">Support</a> |
            <a href="#" class="text-white mx-2">Cancellation Policy</a> |
            <a href="#" class="text-white mx-2">Terms & Conditions</a> |
            <a href="#" class="text-white mx-2">Cookie Policies</a>
            <p class="mt-2">© 2025 - AirBB</p>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
